# Configuration Backend - Bibliothèque VGR

# Port du serveur (Render le définit automatiquement)
PORT=4000

# URL de connexion PostgreSQL
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
# Pour Render: fourni automatiquement via DATABASE_URL
DATABASE_URL="postgresql://user:password@localhost:5432/bibliotheque_vgr?schema=public"

# Environnement
NODE_ENV=production

# CORS (origines autorisees, separees par des virgules)
# Exemple production: https://mon-frontend.vercel.app,https://admin.mon-domaine.com
CORS_ALLOWED_ORIGINS="http://localhost:5173,http://127.0.0.1:5173"

# Autoriser l'origine "null" (utile pour certaines integrations Electron/file://)
CORS_ALLOW_NULL_ORIGIN=false
